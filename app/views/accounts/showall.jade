extends ../shared/template
block content
  #showall
    table
      thead
        th Name
        th Balance
        th Type
        th Opened
      tbody
        each account in accounts
          tr
            td
              a(href="/accounts/#{account._id}")= account.name
            td= account.balance
            td= account.type
            td #{Moment(account.date).format('ll')}
